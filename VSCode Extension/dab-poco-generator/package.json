{
  "name": "dab-poco-generator",
  "displayName": "Dab POCO Generator",
  "description": "Generator of POCO classes based on Data API Builder configuration file",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generatePocoClasses",
        "title": "Generate POCO Classes"
      }
    ],
    "activationEvents": [
      "onCommand:extension.generatePocoClasses"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/mssql": "^9.1.5",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "enabledApiProposals": [
    "treeViewActiveItem"
  ],
  "dependencies": {
    "mssql": "^11.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mamarche/chuckdab.git"
  }
}
